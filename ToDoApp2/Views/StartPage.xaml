<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp2.Views.StartPage"
             Title="StartPage">
    <VerticalStackLayout 
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20"
        Padding="20">

        <Label 
            Text="Welcome to To-do App"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Button 
            Text="Get Started"
            FontSize="18"
            Padding="15,10"
            BackgroundColor="#007AFF"
            TextColor="White"
            CornerRadius="25"
            Clicked="OnGetStartedClicked" />

    </VerticalStackLayout>
</ContentPage>